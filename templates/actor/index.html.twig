{% extends 'base.html.twig' %}

{% block title %}All actors{% endblock %}

{% block body %}
    <h1>Tous les acteurs : </h1>
    {% for actor in actors %}
        <div class="mt-5">
            <h2>{{ loop.index }} / {{ actor.name }}</h2>
        </div>
    {% else %}
        Aucun acteur trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
